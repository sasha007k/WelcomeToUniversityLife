
@{
    ViewData["Title"] = "SignIn";
}

    <section class="container-fluid bg" id="mainsec">
        <section class="row justify-content-center">
            <section class="col-12 col-sm-5 col-md-5">
                <div class="card mt-5 p-0 ml-2">

                    <h5 class="card-header default-color white-text text-center py-4">
                        <strong>Sign in</strong>
                    </h5>

                    <div class="card-body px-lg-5" id="registerform">
                        <form class="text-center" style="color: #757575;" action="/Authentication/SignIn" method="post">

                            <div class="md-form">
                                <input type="email" id="formemail" name="Email" class="form-control forminput">
                                <label for="formemail">E-mail</label>
                            </div>

                            <div class="md-form">
                                <input type="password" id="formpassword" name="Password" class="form-control forminput">
                                <label for="frompassword">Password</label>
                            </div>

                            <button class="btn btn-default btn-block my-4 waves-effect z-depth-0" type="submit" (click)="signin()">Sign in</button>

                            <p>
                                Not a member?
                                <a asp-controller="Authentication" asp-action="Register">Register</a>
                            </p>

                            @*<p>or sign in with:</p>
                            <a href="#" class="mx-2" role="button"><i class="fab fa-facebook-f light-blue-text"></i></a>
                            <a href="#" class="mx-2" role="button"><i class="fab fa-twitter light-blue-text"></i></a>
                            <a href="#" class="mx-2" role="button"><i class="fab fa-linkedin-in light-blue-text"></i></a>
                            <a href="#" class="mx-2" role="button"><i class="fab fa-github light-blue-text"></i></a>*@

                        </form>
                    </div>
                </div>
            </section>
        </section>
    </section>

