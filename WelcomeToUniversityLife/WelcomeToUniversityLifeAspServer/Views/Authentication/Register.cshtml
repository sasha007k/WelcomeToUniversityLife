@{
    ViewData["Title"] = "Register";
}

<section class="container" id="mainsec">
    <section class="row justify-content-center">
        <section class="col-12 col-sm-5 col-md-5">
            <div class="card mt-5 p-0 ml-2">

                <h5 class="card-header white-text text-center py-4 default-color">
                    <strong>Sign up</strong>
                </h5>

                <div class="card-body px-lg-5">

                    <form class="text-center" style="color: #757575;" action="/Authentication/Register" method="post">
                        <div class="md-form">
                            <input type="email" id="formemail" name="Email" class="form-control forminput" autocomplete="off">
                            <label for="formemail">E-mail</label>
                        </div>

                        <div class="md-form">
                            <input type="password" id="formpassword" name="Password" class="form-control forminput" autocomplete="off">
                            <label for="frompassword">Password</label>
                        </div>

                        <div class="md-form">
                            <input type="password" id="formpasswordconfirm" name="ConfirmPassword" class="form-control forminput"autocomplete="off">
                            <label for="formpasswordconfirm">Confirm Password</label>
                        </div>

                        <button class="btn btn-default btn-rounded btn-block my-4 waves-effect z-depth-0" type="submit">Sign up</button>
                    </form>
                </div>
            </div>
        </section>
    </section>
</section>