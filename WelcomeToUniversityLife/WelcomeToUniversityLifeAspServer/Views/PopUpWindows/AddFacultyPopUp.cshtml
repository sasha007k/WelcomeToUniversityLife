<a id="newitemlink" data-toggle="modal" data-target="#newFaculty">
    <img id="newitemphoto" src="~/systemphotos/plus.png"/>
</a>

<div class="modal fade" id="newFaculty" tabindex="-1" role="dialog" aria-labelledby="newFaculty" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header default-color">
                <h5 class="modal-title" id="exampleModalLongTitle">New Faculty</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
                    <form name="my-form" autocomplete="off" action="/UniversityAdmin/AddFaculty" method="post">
                        <div class="form-group row">
                            <div class="col-sm">
                                <input type="text" class="form-control" placeholder="Faculty name" name="FacultyName" required=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm">
                                <input type="text" class="form-control" placeholder="Address" name="Address"/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm">
                                <textarea type="text" class="form-control" style="resize: none" placeholder="Description" name="Description"></textarea>
                            </div>
                        </div>
                        <div class="text-left">
                            <button type="submit" class="btn btn-default my-4 waves-effect z-depth-0">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="modal-footer default-color">
            </div>
        </div>
    </div>
</div>