@model Application.Models.UniversityAdmin.AddFacultyModel;

@{
    ViewData["Title"] = "Add Faculty";
}

<div class="container">
    <div class="row">
        <div class="col">
            <div class="card mt-3 tab-card">
                <div class="card-header tab-card-header default-color">
                    <ul class="nav nav-tabs card-header-tabs" id="myTab" role="tablist" style="background-color: #2bbbad">
                        <li class="nav-item active">
                            <a class="nav-link active" id="one-tab" data-toggle="tab" href="#one" role="tab" aria-controls="One" aria-selected="true">Add Faculty</a>
                        </li>
                    </ul>
                </div>

                <div class="tab-content" id="myTabContent">

                    <div class="tab-pane fade show active p-3" id="one" role="tabpanel" aria-labelledby="one-tab">
                        <form name="my-form" autocomplete="off" action="/UniversityAdmin/AddFaculty" method="post">
                            <div class="form-group row">
                                <label for="FacultyName" class="col-sm-2 col-form-label">Faculty Name</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" placeholder="Faculty name" name="FacultyName" required="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Address" class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" placeholder="Address" name="Address" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label for="Description" class="col-sm-2 col-form-label">Description</label>
                                <div class="col-sm-10">
                                    <textarea type="text" class="form-control" placeholder="Description" name="Description"></textarea>
                                </div>
                            </div>
                            

                            <div>
                                <button type="submit" class="btn btn-default my-4 waves-effect z-depth-0">Submit</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>