@model Application.Models.User.UserProfileModel;

@{
    ViewData["Title"] = "Profile";
}

<div class="cotainer">
    <div class="card">
        <h5 class="card-header default-color white-text text-center py-4">
            <strong>Profile</strong>
        </h5>
        <div class="card-body">
            

            <div class="row justify-content-center">
                <div class="col">
                    <form name="my-form" action="/User/Profile" method="post">
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="Email">Email</label>
                                <input type="text" class="form-control elem" placeholder="Email" name="Email" value="@Model.Email" readonly required="" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="LastName">Last name</label>
                                <input type="text" class="form-control elem" placeholder="Last name" name="LastName" value="@Model.LastName" required="" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="FirstName">First name</label>
                                <input type="text" class="form-control elem" placeholder="First name" name="FirstName" value="@Model.FirstName" required="" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="MiddleName">Middle name</label>
                                <input type="text" class="form-control elem" placeholder="Middle name" name="MiddleName" value="@Model.MiddleName" required="" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="City">City</label>
                                <input type="text" class="form-control elem" placeholder="City" name="City" value="@Model.City" required="" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <label for="Phone">Phone</label>
                                <input type="tel" class="form-control elem" placeholder="Phone" name="Phone" value="@Model.Phone" autofocus=""/>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="DateOfBirth">Date of birth</label>
                                    <input type="date" class="form-control elem" placeholder="Date of birth" name="DateOfBirth" value="@Model.DateOfBirth" autofocus=""/>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-cyan btn-sm">Update</button>
                        </div>
                    </form>
                </div>


            </div>
        </div>

    </div>
</div>